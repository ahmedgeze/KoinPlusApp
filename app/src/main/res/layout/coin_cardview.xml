<?xml version="1.0" encoding="utf-8"?>
        <android.support.v7.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="15dp"
            >

            <LinearLayout
                android:id="@+id/parentLL"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="#1e2a2d"
                android:layout_gravity="top"


                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center"
                    android:weightSum="21"
                    >

                    <ImageView
                        android:id="@+id/coin_pic"
                        android:layout_width="0dp"
                        android:layout_height="30dp"
                        android:layout_marginRight="10px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:src="@drawable/if_bitoin_btc_coin_crypto_2844381"
                        android:layout_weight="2"
                        />

                    <TextView
                        android:id="@+id/coin_name"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:textColor="#fdfde0"
                        android:background="#1e2a2d"
                        android:text="BTC"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:layout_weight="3"
                        />

                    <TextView
                        android:id="@+id/coin_price"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fdfde0"
                        android:background="#1e2a2d"
                        android:text="15000$"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:layout_weight="5"
                        />


                    <TextView
                        android:id="@+id/volume"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fdfde0"
                        android:background="#1e2a2d"
                        android:text="1.000.000.000"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:layout_weight="8"
                        />


                    <TextView
                        android:id="@+id/change"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:textColor="#fdfde0"
                        android:background="#1e2a2d"
                        android:text="-%25.4"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="10px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"
                        android:layout_weight="4"/>

                    <ImageView
                        android:id="@+id/alarm"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_marginRight="10px"
                        android:layout_marginLeft="30px"
                        android:layout_marginTop="10px"
                        android:layout_marginBottom="10px"

                        android:src="@drawable/if_alarm_408410"
                        android:layout_weight="3"/>




                </LinearLayout>

                <LinearLayout
                    android:id="@+id/rv_child_items"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:layout_gravity="bottom"
                    android:weightSum="80"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:weightSum="80"
                        >
                        <com.github.mikephil.charting.charts.BarChart
                            android:id="@+id/chart"
                            android:layout_width="match_parent"
                            android:layout_height="200dp" />
                        <TextView
                            android:id="@+id/grafik_value"
                            android:textColor="@color/textcolor"
                            android:background="@color/toolbar_bg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="80"
                            />




                    </LinearLayout>




                </LinearLayout>



                </LinearLayout>












        </android.support.v7.widget.CardView>




